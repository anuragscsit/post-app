<div style="margin-top:30px">
  <div class="col-md-6 offset-md-3">
  	<%= form_for([@post, @post.comments.build]) do |form| %>
    
    <div>
      <h2>Post a comment for <%=@post.article %></h2>
    </div>
    <div>
      <div class="form-group">
        <%= form.label :comment_description %><br>
        <%= form.text_area :comment_description , class: "form-control"%>
      </div>
        <%= form.hidden_field :user_id, value: current_user.id%>
      
      <div class="actions">
        <%= form.submit  %>
      </div>
    </div>  
  <% end %>
  </div>
</div>  